      default y
      select ZMK_BEHAVIORS

  config ZMK_PIM447_TB_ACTIONS
      bool
      default y

  config ZMK_PIM447_TB_ACTIONS_INCLUDE
      string
      default "tb_actions.dtsi"
endif # PIM447





